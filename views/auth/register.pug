extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-indigo-200 Bienes
            span.font-normal.text-black_white-100.blur-none Raices
        h2.text-center.font-extrabold.my-10.text-2xl.text-black_white-100.blur-none= page 

        if errors
            div(class= "max-w-md mx-auto my.10")
                each error in errors
                    p.bg-crimson-900.text-black_white-100.uppercase.text-center.text-xs.p-2.mb-1.font-bold.rounded-md= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-black_white-100.py-8.px-4.shadow.rounded-xl.backdrop-blur-md.bg-opacity-10.py-8.px-4.shadow-xl.rounded-xl.shadow-black_white-100
                form.space-y-5(method="POST" action="/auth/createAccount")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-indigo-200.mb-2.font-bold(for="name") Nombre:
                        .flex.items-center.border.py-2.px-3.rounded-md.mb-4.border-black_white-100
                            svg(class="h-5 w-5 text-black_white-100 " xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor")
                                path(d="M20.822 18.096c-3.439-.794-6.64-1.49-5.09-4.418 4.72-8.912 1.251-13.678-3.732-13.678-5.082 0-8.464 4.949-3.732 13.678 1.597 2.945-1.725 3.641-5.09 4.418-3.073.71-3.188 2.236-3.178 4.904l.004 1h23.99l.004-.969c.012-2.688-.092-4.222-3.176-4.935z")
                            input#nombre.w-full.px-3.py-4.rounded-md.placeholder-black_white-100.bg-black_white-200.bg-opacity-0.text-black_white-100(placeholder= "Ingresa tu Nombre" type="text" name="name" value=user ? user.name : '')

                    div
                        label.block.text-sm.uppercase.text-indigo-200.mb-2.font-bold(for="email") Email:
                        .flex.items-center.border.py-2.px-3.rounded-md.mb-4.border-black_white-100
                            svg(class="h-5 w-5 text-black_white-100 " xmlns="http://www.w3.org/2000/svg"  viewBox="0 0 24 24" fill="none" stroke="currentColor")
                                path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207")
                            input#nombre.w-full.px-3.py-4.rounded-md.placeholder-black_white-100.bg-black_white-200.bg-opacity-0.text-black_white-100(placeholder= "Ingresa tu e-mail" type="email" name="email" value=user ? user.email : '')

                    div
                        label.block.text-sm.uppercase.text-indigo-200.mb-2.font-bold(for="Password") Contraseña:
                        .flex.items-center.border.py-2.px-3.rounded-md.border-black_white-100
                            svg(class="h-5 w-5 text-black_white-100 " xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="none" stroke="currentColor")
                                path(fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd")
                            input#nombre.w-full.px-3.py-4.rounded-md.placeholder-black_white-100.bg-black_white-200.bg-opacity-0.text-black_white-100(placeholder= "Ingresa tu contraseña" type="password" name="password")

                    div
                        label.block.text-sm.uppercase.text-indigo-200.mb-2.font-bold(for="confirmPassword") Contraseña:
                        .flex.items-center.border.py-2.px-3.rounded-md.border-black_white-100
                            svg(class="h-5 w-5 text-black_white-100 " xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="none" stroke="currentColor")
                                path(fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd")
                            input#nombre.w-full.px-3.py-4.rounded-md.placeholder-black_white-100.bg-black_white-200.bg-opacity-0.text-black_white-100(placeholder= "Repite tu contraseña" type="password" name="confirmPassword")
                    
                    div.flex.items.center.justify-between
                        a.text-indigo-200.text-xs(class="hover:text-crimson-100 hover:underline hover:decoration-crimson-100" href="/auth/login") ¿Ya tienes cuenta? 
                            span.text-xs.text-black_white-100 Inicia Sesión
                        a.text-indigo-200.text-xs(class="hover:text-crimson-100 hover:underline hover:decoration-crimson-100" href="/auth/passswordRecovery") Olvide mi contraseña

                    input(class="w-full bg-crimson-500 hover:bg-crimson-800 text-black_white-100 font-bold py-3 cursor-pointer rounded-lg" type="submit" value="Crear Cuenta")

