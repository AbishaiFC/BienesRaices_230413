extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-indigo-200.text-pulse Bienes
            span.font-normal.text-black_white-100.blur-none Raices
        h2.text-center.font-extrabold.my-10.text-2xl.text-black_white-100.blur-none= page 

        if errors
            div(class= "max-w-md mx-auto my.10")
                each error in errors
                    div.bg-crimson-900.text-black_white-100.uppercase.text-center.text-xs.p-2.mb-1.font-bold.rounded-md.alert.shadow-black_white-100.shadow.opacity-70.flex.items-center
                        img(src="/img/cancel.png").h-5.w-5
                        p.ml-5= error.msg                   

        script.
            const alerts = document.querySelectorAll('.alert'); 
            alerts.forEach(alert => {
                setTimeout(() => {
                    alert.style.transition = 'opacity 0.5s';
                    alert.style.opacity = '0';
                    setTimeout(() => alert.remove(), 500);
                }, 3000); 
            });

