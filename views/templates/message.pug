extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-indigo-200.text-pulse Bienes
            span.font-normal.text-black_white-100.blur-none Raices
        h2.text-center.font-extrabold.my-10.text-2xl.text-black_white-100.blur-none= page 

        p.text-xl.font-bold.text-center.my-10.text-black_white-100= message
        form.space-y-5(method="POST")
            input(type="hidden" name="_csrf" value= csrfToken)

        if notification
            script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
            script.
                Swal.fire({
                    toast: false,
                    position: 'center',
                    title: "¡Registro exitoso!",
                    text: "Se le ha enviado un mensaje a su correo, por favor revise su bandeja de entrada.",
                    icon: 'success',
                    iconColor: '#e0e7ff',
                    timer: 7000,
                    timerProgressBar: true,
                    showConfirmButton: false,
                    allowOutsideClick: false,
                    customClass: {
                        popup: 'bg-indigo-500 shadow-white custom-popup backdrop-blur bg-opacity-15  pulse',
                        timerProgressBar: 'glowing-timer pulse-bar',
                        icon: 'glowing-icon', 
                    }
                });

            style.
                .swal2-popup {
                    color: #ffffff !important;
                }
                .custom-popup {
                    box-shadow: 0 0 50px 15px rgba(255, 255, 255, 0.9), inset 0 0 15px rgba(0, 0, 0, 0.9);
                }
                .glowing-icon {
                    position: relative;
                }
                .glowing-icon::after {
                    content: '';
                    position: absolute;
                    top: -5px;
                    left: -5px;
                    right: -5px;
                    bottom: -5px;
                    border-radius: 50%;
                    box-shadow: 0 0 10px #c7d2fe, 0 0 30px #c7d2fe, 0 0 60px rgba(255, 255, 255, 0.8);
                    animation: pulse 2s infinite;
                }
                @keyframes pulse {
                    0%, 100% {
                        box-shadow: 0 0 5px #c7d2fe, 0 0 20px #c7d2fe, 0 0 40px rgba(199, 210, 254, 0.5);
                    }
                    50% {
                        box-shadow: 0 0 10px #ffffff, 0 0 30px #ffffff, 0 0 60px rgba(255, 255, 255, 0.8)
                    }
                }
                .swal2-timer-progress-bar {
                    height: 6px !important;
                    background-color: #fff !important;
                    box-shadow: 0 0 10px #b8336a, 0 0 20px #b8336a, 0 0 30px #b8336a !important;
                    opacity: 1 !important;
                    z-index: 1000 !important;
                    animation: pulse 2s;
                }
                @keyframes text-pulse {
                    0%, 100% {
                        color: #c7d2fe; /* Color base */
                        text-shadow: 0 0 5px #c7d2fe, 0 0 20px #c7d2fe, 0 0 40px rgba(199, 210, 254, 0.5);
                    }
                    50% {
                        color: #ffffff; /* Más brillante */
                        text-shadow: 0 0 10px #ffffff, 0 0 30px #ffffff, 0 0 60px rgba(255, 255, 255, 0.8);
                    }
                    }

                    /* Clase para texto pulsante */
                    .text-pulse {
                        animation: text-pulse 3s infinite ease-in-out; /* Duración ajustable */
                    }
